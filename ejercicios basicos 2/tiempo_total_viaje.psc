Proceso TiempoTotalViaje
    Definir tramo1 Como Real ;
	Definir tramo2 como real ;
	Definir  tramo3 Como Real ;
	Definir  total como real ;
    Escribir "Ingrese tiempo tramo 1 (h):" ;
    Leer tramo1 ;
    Escribir "Ingrese tiempo tramo 2 (h):" ;
    Leer tramo2 ;
    Escribir "Ingrese tiempo tramo 3 (h):" ;
    Leer tramo3 ;
    total <- tramo1 + tramo2 + tramo3 ;
    Escribir "Tiempo total de viaje: ", total, " horas" ;
FinProceso

